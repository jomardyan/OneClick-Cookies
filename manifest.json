{
  "manifest_version": 3,
  "name": "OneClick Cookies",
  "version": "1.0.0",
  "description": "Automatically accept or deny cookie consent banners with one click",
  "author": "Hayk Jomardyan",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content/detector.js", "content/content-script.js"],
      "css": ["content/hide-banners.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "cookie_scripts_blocker",
        "enabled": true,
        "path": "rules/blocking-rules.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["rules/consent-patterns.json"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
